<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomersMainController">
   <children>
      <Label layoutX="37.0" layoutY="10.0" text="Customers">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TableView fx:id="customersTable" layoutX="35.0" layoutY="45.0" prefHeight="294.0" prefWidth="838.0">
        <columns>
          <TableColumn fx:id="customerIDCol" prefWidth="75.0" text="Customer ID" />
          <TableColumn fx:id="customerNameCol" prefWidth="178.0" text="Customer Name" />
            <TableColumn fx:id="addressCol" prefWidth="144.0" text="Address" />
            <TableColumn fx:id="postalCodeCol" prefWidth="108.0" text="Postal Code" />
            <TableColumn fx:id="phoneCol" prefWidth="104.0" text="Phone" />
            <TableColumn fx:id="divisionNameCol" prefWidth="228.0" text="Division Name" />
        </columns>
      </TableView>
      <Button fx:id="addCustomerBtn" layoutX="35.0" layoutY="351.0" mnemonicParsing="false" onAction="#addNewCustomer" text="Add">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="updateBtn" layoutX="112.0" layoutY="351.0" mnemonicParsing="false" onAction="#updateCustomer" text="Update">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="deleteBtn" layoutX="196.0" layoutY="351.0" mnemonicParsing="false" onAction="#deleteCustomer" text="Delete">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="810.0" layoutY="9.0" mnemonicParsing="false" onAction="#logoutUser" text="Logout">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="707.0" layoutY="9.0" mnemonicParsing="false" onAction="#openMainMenu" text="Main Menu">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
